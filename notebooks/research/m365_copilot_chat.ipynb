    "# === Cell 4: Unit Tests ===\n",
    "import unittest\n",
    "from unittest.mock import MagicMock, patch\n",
    "\n",
    "class TestCopilotIntegration(unittest.TestCase):\n",
    "    \n",
    "    @patch('azure.identity.InteractiveBrowserCredential')\n",
    "    def test_authentication_flow(self, MockCredential):\n",
    "        \"\"\"Test if authentication initializes correctly\"\"\"\n",
    "        client = AzureCopilotClient()\n",
    "        \n",
    "        # Mock the get_token method\n",
    "        mock_cred_instance = MockCredential.return_value\n",
    "        mock_token = MagicMock()\n",
    "        mock_token.token = \"fake_token_123\"\n",
    "        mock_cred_instance.get_token.return_value = mock_token\n",
    "        \n",
    "        result = client.authenticate()\n",
    "        self.assertTrue(result)\n",
    "        self.assertEqual(client.token, \"fake_token_123\")\n",
    "        \n",
    "    def test_send_message_logic(\n",
    "        \"\"\"Test message payload construction\"\"\"\n",
    "        client = AzureCopilotClient()\n",
    "        client.token = \"valid_token\"\n",
    "        \n",
    "        # Since we mocked the network call in the class for this demo, we test the return directly\n",
    "        response = client.send_message(\"chat_123\", \"Hello AI\")\n",
    "        self.assertIn(\"Echo: Hello AI\", response['body']['content'])\n",
    "\n",
    "# Run Tests\n",
    "suite = unittest.TestLoader().loadTestsFromTestCase(TestCopilotIntegration)\n",
    "unittest.TextTestRunner(verbosity=2).run(suite)"
   ]
