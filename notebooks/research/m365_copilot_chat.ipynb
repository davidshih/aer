    "# === Cell 5: Interactive Chat UI ===\n",
    "import ipywidgets as widgets\n",
    "from IPython.display import display, clear_output\n",
    "\n",
    "# Initialize Client\n",
    "client = AzureCopilotClient()\n",
    "# client.authenticate() # Uncomment to run real auth\n",
    "\n",
    "# UI Components\n",
    "chat_output = widgets.Output(layout={'border': '1px solid #ccc', 'height': '400px', 'overflow_y': 'scroll'})
",
    "txt_input = widgets.Text(placeholder='Type your message here...', layout=widgets.Layout(width='80%'))\n",
    "btn_send = widgets.Button(description='Send', button_style='primary', icon='paper-plane')\n",
    "btn_auth = widgets.Button(description='Authenticate', button_style='warning', icon='key')\n",
    "\n",
    "current_chat_id = \"chat-session-demo\"\n",
    "\n",
    "def log_message(sender, text, is_user=False):\n",
    "    align = \"right\" if is_user else \"left\"\n",
    "    color = \"#e3f2fd\" if is_user else \"#f5f5f5\"\n",
    "    with chat_output:\n",
    "        display(widgets.HTML(\n",
    "            f\"<div style='text-align:{align}; margin: 5px;'>\"\n",
    "            f\"<span style='background-color:{color}; padding: 8px 12px; border-radius: 15px; display: inline-block;'>\"\n",
    "            f\"<b>{sender}:</b> {text}</span></div>\"\n",
    "        ))\n",
    "\n",
    "def on_auth_click(b):\n",
    "    with chat_output:\n",
    "        print(\"Authenticating...\")\n",
    "        if client.authenticate():\n",
    "            print(\"Authentication Successful!\")\n",
    "            # Setup a real chat ID here if needed\n",
    "        else:\n",
    "            print(\"Authentication Failed.\")\n",
    "\n",
    "def on_send_click(b):\n",
    "    user_text = txt_input.value\n",
    "    if not user_text:\n",
    "        return\n",
    "    \n",
    "    # Display User Message\n",
    "    log_message(\"You\", user_text, is_user=True)\n",
    "    txt_input.value = \"\"\n",
    "    \n",
    "    # Call API (Wrapped in Try/Except)\n",
    "    try:\n",
    "        # Simulation if not really authenticated for the demo to work without credentials\n",
    "        if not client.token:\n",
    "             client.token = \"simulated_token\"\n",
    "             \n",
    "        response = client.send_message(current_chat_id, user_text)\n",
    "        bot_reply = response.get('body', {}).get('content', 'No content')\n",
    "        log_message(\"Copilot\", bot_reply, is_user=False)\n",
    "        \n",
    "    except Exception as e:\n",
    "        log_message(\"System\", f\"Error: {str(e)}\", is_user=False)\n",
    "\n",
    "btn_auth.on_click(on_auth_click)\n",
    "btn_send.on_click(on_send_click)\n",
    "txt_input.on_submit(on_send_click)\n",
    "\n",
    "# Layout\n",
    "ui = widgets.VBox([
",
    "    widgets.HTML(\"<h2>ðŸ¤– M365 Copilot Chat</h2>"),\n",
    "    btn_auth,\n",
    "    chat_output,\n",
    "    widgets.HBox([txt_input, btn_send])\n",
    "])\n",
    "\n",
    "display(ui)"
   ]
