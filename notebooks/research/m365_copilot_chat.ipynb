   "source": [
    "# === Cell 3: Azure AD Authentication & Graph Client ===\n",
    "\n",
    "class AzureCopilotClient:\n",
    "    def __init__(self):\n",
    "        self.credential = None\n",
    "        self.token = None\n",
    "        self.headers = {}\n",
    "        \n",
    "    def authenticate(self):\n",
    "        \"\"\"Authenticates using Azure SDK Interactive Browser Flow\"\"\"\n",
    "        try:\n",
    "            logger.info(\"Initiating authentication...\")\n",
    "            # Using InteractiveBrowserCredential for local notebook usage\n",
    "            self.credential = InteractiveBrowserCredential(client_id=Config.CLIENT_ID, tenant_id=Config.TENANT_ID)\n",
    "            \n",
    "            # Force token retrieval to verify login\n",
    "            token_obj = self.credential.get_token(*Config.SCOPES)\n",
    "            self.token = token_obj.token\n",
    "            self.headers = {\n",
    "                \"Authorization\": f\"Bearer {self.token}\",\n",
    "                \"Content-Type\": \"application/json\"\n",
    "            }\n",
    "            logger.info(\"âœ… Authentication successful.\")\n",
    "            return True\n",
    "        except Exception as e:\n",
    "            logger.error(f\"âŒ Authentication failed: {str(e)}\")\n",
    "            return False\n",
    "\n",
    "    def create_chat(self, title=\"Copilot Interaction\") -> str:\n",
    "        \"\"\"Creates a new chat session (One-on-one or Group)\"\"\"\n",
    "        # Note: In a real Copilot scenario, this might be a specific endpoint\n",
    "        # For this demo, we create a standard chat\n",
    "        endpoint = f\"{Config.GRAPH_API_BASE}/chats\"\n",
    "        payload = {\n",
    "            \"chatType\": \"oneOnOne\",\n",
    "            \"members\": [\n",
    "                {\n",
    "                    \"roles\": [\"owner\"],\n",
    "                    \"@odata.type\": \"#microsoft.graph.aadUserConversationMember\",\n",
    "                    \"user@odata.bind\": f\"https://graph.microsoft.com/v1.0/me\"\n",
    "                },\n",
    "                # Add the bot/copilot app ID here if it were a specific bot user\n",
    "                # {\n",
    "                #    \"roles\": [\"owner\"],\n",
    "                #    \"@odata.type\": \"#microsoft.graph.aadUserConversationMember\",\n",
    "                #    \"user@odata.bind\": f\"https://graph.microsoft.com/v1.0/users('{Config.BOT_ID}')\"\n",
    "                # }\n",
    "            ]\n",
    "        }\n",
    "        # For demo purposes, we will mock a chat ID if we can't actually create one without a second user\n",
    "        # Or we return a placeholder if this is just a simulation\n",
    "        return \"chat-session-id-12345\"\n",
    "\n",
    "    def send_message(self, chat_id: str, content: str) -> dict:\n",
    "        \"\"\"Sends a message to the LLM/Chatbot via Graph\"\"\"\n",
    "        if not self.token:\n",
    "            raise ClientAuthenticationError(\"Not authenticated\")\n",
    "            \n",
    "        endpoint = f\"{Config.GRAPH_API_BASE}/chats/{chat_id}/messages\"\n",
    "        payload = {\n",
    "            \"body\": {\n",
    "                \"contentType\": \"html\",\n",
    "                \"content\": content\n",
    "            }\n",
    "        }\n",
    "        \n",
    "        # logger.info(f\"Sending message to {endpoint}...\")\n",
    "        # In a real scenario:\n",
    "        # response = requests.post(endpoint, headers=self.headers, json=payload)\n",
    "        # response.raise_for_status()\n",
    "        # return response.json()\n",
    "        \n",
    "        # Mock Response for Demo\n",
    "        return {\n",
    "            \"id\": \"msg-123\",\n",
    "            \"createdDateTime\": datetime.now().isoformat(),\n",
    "            \"body\": {\"content\": f\"Echo: {content} (This is a mock response from the Azure SDK wrapper)\"}\n",
    "        }\n",
    "   ]
