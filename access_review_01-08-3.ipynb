    "# === Cell 5: Summary & Sorting (Optimized) ===\n",
    "from IPython.display import display, HTML\n",
    "import pandas as pd\n",
    "\n",
    "if len(df) == 0:\n",
    "    display(HTML(\"<p>No Data</p>\"))\n",
    "else:\n",
    "    # Prep Status Pivot\n",
    "    df['clean_resp'] = df[\"Reviewer's Response\"].fillna(\"\").astype(str).str.lower().str.strip()\n",
    "    \n",
    "    base = df.groupby([\"Category\", \"App_Name\", \"Reviewer\", \"folder_url\", \"Due_Date_String\"]).agg(\n",
    "        total=(\"Reviewer\", \"count\"), missing=(\"is_missing\", \"sum\")\n",
    "    ).reset_index()\n",
    "    \n",
    "    # Detailed Counts\n",
    "    status_counts = pd.pivot_table(df, index=[\"Category\", \"App_Name\", \"Reviewer\"], columns=\"clean_resp\", aggfunc=\"size\", fill_value=0).reset_index()\n",
    "    summary = pd.merge(base, status_counts, on=[\"Category\", \"App_Name\", \"Reviewer\"], how=\"left\")\n",
    "    \n",
    "    def get_cnt(r, kw): return sum(r.get(c, 0) for c in status_counts.columns if any(k in str(c) for k in kw))\n",
    "    summary['Approved'] = summary.apply(lambda r: get_cnt(r, ['approv', 'retain', 'keep']), axis=1)\n",
    "    summary['Denied'] = summary.apply(lambda r: get_cnt(r, ['denied', 'remove', 'delete']), axis=1)\n",
    "    summary['Change_Required'] = summary.apply(lambda r: get_cnt(r, ['change', 'modif']), axis=1)\n",
    "    \n",
    "    # Logic: Status Column & Sorting\n",
    "    # Sort: Incomplete (Red) first -> App Name -> Missing Count (Desc)\n",
    "    summary['is_complete'] = summary['missing'] == 0\n",
    "    summary['status'] = summary.apply(lambda r: \"üü¢ Complete\" if r['is_complete'] else \"üî¥ Action Required\", axis=1)\n",
    "    \n",
    "    summary = summary.sort_values(by=['is_complete', 'App_Name', 'missing'], ascending=[True, True, False])\n",
    "    \n",
    "    # Final Columns Cleanup (Drop G,K,L,M equivalents)\n",
    "    final_cols = [\"status\", \"Category\", \"App_Name\", \"Reviewer\", \"total\", \"missing\", \"Approved\", \"Denied\", \"Change_Required\", \"folder_url\", \"Due_Date_String\"]\n",
    "    summary_df = summary[final_cols].copy() # Export this\n",
    "    \n",
    "    s_file = f\"{output_dir}/Summary_Status_{timestamp}.xlsx\"\n",
    "    summary_df.to_excel(s_file, index=False)\n",
    "    format_excel(s_file)\n",
    "    \n",
    "    # HTML View\n",
    "    html = \"<table style='width:100%; border-collapse:collapse;'>\"\n",
