    "# === Cell 4: Processor & Report Generator (Retry + Strict Columns) ===\n",
    "import pandas as pd\n",
    "import re\n",
    "from openpyxl.utils import get_column_letter\n",
    "from openpyxl.styles import Alignment\n",
    "from IPython.display import display, HTML\n",
    "\n",
    "def ordinal(n): return \"%d%s\" % (n, \"tsnrhtdd\"[(n//10%10!=1)*(n%10<4)*n%10::4])\n",
    "\n",
    "if 'TARGET_APPS' not in globals() or not TARGET_APPS:\n",
    "    logger.warning(\"‚ö†Ô∏è No apps selected! Using default empty list.\")\n",
    "    TARGET_APPS = []\n",
    "\n",
    "all_responses = []\n",
    "errors = []\n",
    "\n",
    "for category, current_app_name, current_path in TARGET_APPS:\n",
    "    try:\n",
    "        reviewers = list_folders(site_id, current_path)\n",
    "        reviewers = [r for r in reviewers if r['name'] not in [\"Forms\", \"_private\"] and \"audit\" not in r['name'].lower()]\n",
    "        logger.info(f\"üöÄ App: {current_app_name} | Users: {len(reviewers)}\")\n",
    "        \n",
    "        if not reviewers: continue\n",
    "\n",
    "        for folder in reviewers:\n",
    "            reviewer_name = folder[\"name\"]\n",
    "            folder_url = folder[\"webUrl\"]\n",
    "            folder_path = f\"{current_path}/{reviewer_name}\"\n",
    "            \n",
    "            try:\n",
    "                excel_files = list_excel_files(site_id, folder_path)\n",
    "                target_files = [f for f in excel_files if reviewer_name.lower() in f[\"name\"].lower()]\n",
    "                \n",
    "                if not target_files:\n",
    "                    valid_excels = [f for f in excel_files if not f[\"name\"].startswith(\"~$\")]\n",
    "                    if not valid_excels: continue\n",
    "                    target_file = valid_excels[0]\n",
    "                else:\n",
    "                    target_file = target_files[0]\n",
    "                \n",
    "                # === Calculate Due Date (Creation + 14 days) ===\n",
    "                created_date_str = target_file.get(\"createdDateTime\", \"\")\n",
    "                due_date_display = \"\"\n",
    "                if created_date_str:\n",
    "                    dt = datetime.strptime(created_date_str[:10], \"%Y-%m-%d\") + timedelta(days=14)\n",
    "                    due_date_display = dt.strftime(\"%b \") + ordinal(dt.day) + dt.strftime(\", %Y\")\n",
    "\n",
    "                file_name = target_file[\"name\"]\n",
    "                file_id = target_file[\"id\"]\n",
    "                audit_log = get_file_audit_log(site_id, file_id)\n",
    "                \n",
    "                # === Retry Logic (1 retry) ===\n",
    "                rows = []\n",
    "                for attempt in range(2):\n",
    "                    try:\n",
    "                        content = download_file(site_id, f\"{folder_path}/{file_name}\")\n",
    "                        rows = read_visible_rows(content, reviewer_name, file_name, folder_url)\n",
    "                        break # Success\n",
    "                    except Exception as e:\n",
    "                        if attempt == 0: \n",
    "                            time.sleep(1) # Wait 1 sec before retry\n",
    "                            logger.info(f"  ‚ö†Ô∏è Retrying {reviewer_name}...")\n",
    "                        else: raise e\n",
    "                \n",
    "                for row in rows:\n",
    "                    row.update({\n",
    "                        \"Category\": category, \"App_Name\": current_app_name,\n",
    "                        \"Audit_History\": audit_log, \n",
    "                        \"Due_Date_String\": due_date_display,\n",
    "                        \"Last_Modified\": target_file.get(\"lastModifiedDateTime\")\n",
    "                    })\n",
    "                \n",
    "                all_responses.extend(rows)\n",
    "                logger.info(f"  ‚úÖ Read: {reviewer_name} ({len(rows)} rows)")\n",
    "\n",
    "            except Exception as e:\n",
    "                logger.error(f"  ‚ùå Failed {reviewer_name}: {e}")\n",
    "                errors.append({\"Category\": category, \"App_Name\": current_app_name, \"reviewer\": reviewer_name, \"error\": str(e)})\n",
    "    except Exception as e:\n",
    "        logger.error(f"‚ùå App Error {current_app_name}: {e}")\n",
    "\n",
    "# === Generate Reports ===\n",
    "df = pd.DataFrame(all_responses)\n",
    "today_str = datetime.now().strftime(\"%Y-%m-%d\")\n",
    "output_dir = f\"output/{today_str}\"\n",
    "os.makedirs(output_dir, exist_ok=True)\n",
    "timestamp = datetime.now().strftime(\"%H%M%S\")\n",
    "\n",
    "def format_excel(path):\n",
    "    try:\n",
    "        wb = load_workbook(path); ws = wb.active\n",
    "        long_cols = [\"Audit_History\", \"Details of Access Changes\", \"Reviewer's Response\", \"error\", \"folder_url\"]\n",
    "        for col in ws.columns:\n",
    "            head = str(col[0].value).strip() if col[0].value else \"\"\n",
    "            letter = get_column_letter(col[0].column)\n",
    "            ws.column_dimensions[letter].width = 50 if head in long_cols else 20\n",
    "            for c in col: c.alignment = Alignment(wrap_text=(head in long_cols), vertical='top')\n",
    "        wb.save(path)\n",
    "    except: pass\n",
    "\n",
    "report_html = f\"<h3>üìÇ Output: {output_dir}</h3><ul>\"\n",
    "# Strict Column Order\n",
    "export_cols = [\"Category\", \"App_Name\", \"Reviewer\", \"Reviewer's Response\", \"Details of Access Changes\", \"is_missing\", \"Audit_History\", \"Last_Modified\", \"file_name\", \"folder_url\"]\n",
    "\n",
    "def clean_filename(s): return re.sub(r'[\\\\/*?:\"<>|]', \"_\", str(s))\n",
    "\n",
    "if len(df) > 0:\n",
    "    # Consolidated\n",
    "    big_file = f\"{output_dir}/ALL_Consolidated_{timestamp}.xlsx\"\n",
    "    df[[c for c in export_cols if c in df.columns]].to_excel(big_file, index=False)\n",
    "    format_excel(big_file)\n",
    "    report_html += f\"<li><b>Big File:</b> <code>{big_file}</code></li>\"\n",
    "    # Individual\n",
    "    for app in df[\"App_Name\"].unique():\n",
    "        sub = df[df[\"App_Name\"] == app]\n",
    "        cat = sub.iloc[0].get(\"Category\", \"\")\n",
    "        fname = f\"{output_dir}/{clean_filename(cat)}_{clean_filename(app)}_{timestamp}.xlsx\"\n",
    "        sub[[c for c in export_cols if c in df.columns]].to_excel(fname, index=False)\n",
    "        format_excel(fname)\n",
    "        report_html += f\"<li>{app}: <code>{fname}</code></li>\"\n",
    "\n",
    "if errors:\n",
    "    err_file = f\"{output_dir}/ERRORS_{timestamp}.xlsx\"\n",
    "    pd.DataFrame(errors).to_excel(err_file, index=False)\n",
    "    report_html += f\"<li style='color:red'>Errors: <code>{err_file}</code></li>\"\n",
    "\n",
    "display(HTML(report_html + \"</ul>\"))"
   ]
